@model Intervencion

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Editar Intervencion</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="ID_Intervencion" class="mb-2"></label>
                    <input asp-for="ID_Intervencion" class="form-control border-0 shadow" />
                    <span asp-validation-for="ID_Intervencion" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="ID_Estudiante" class="mb-2"></label>
                    <input asp-for="ID_Estudiante" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="ID_Estudiante" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="FechaIntervencion" class="mb-2"></label>
                    <input asp-for="FechaIntervencion" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="FechaIntervencion" class="text-danger"></span>
                </div>
                <select asp-for="TipoIntervencion" class="form-select" aria-label="@Model.TipoIntervencion">
                    <option value="Apoyo Académico">Apoyo Académico</option>
                    <option value="Apoyo Psicológico">Apoyo Psicológico</option>
                    <option value="Comunicación con Padres">Comunicación con Padres</option>
                    <option value="Otros">Otros</option>
                </select>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="ResultadoIntervencion" class="mb-2"></label>
                    <input asp-for="ResultadoIntervencion" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="ResultadoIntervencion" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-info form-control">Editar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Intervencion" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
