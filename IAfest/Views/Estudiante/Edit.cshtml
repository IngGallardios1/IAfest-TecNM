@model Estudiante

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Editar Estudiante</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="ID_Estudiante" class="mb-2"></label>
                    <input asp-for="ID_Estudiante" class="form-control border-0 shadow" />
                    <span asp-validation-for="ID_Estudiante" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="NombreCompleto" class="mb-2"></label>
                    <input asp-for="NombreCompleto" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="FechaDeNacimiento" class="mb-2"></label>
                    <input asp-for="FechaDeNacimiento" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="Genero" class="mb-2"></label>
                    <select asp-for="Genero" class="form-select mb-4" aria-label="@Model.Genero">
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                    </select>
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="NivelEscolar" class="mb-2"></label>
                    <input asp-for="NivelEscolar" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="NivelEscolar" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="Domicilio" class="mb-2"></label>
                    <input asp-for="Domicilio" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="Domicilio" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="NumeroTelefono" class="mb-2"></label>
                    <input asp-for="NumeroTelefono" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="CorreoElectronico" class="mb-2"></label>
                    <input asp-for="CorreoElectronico" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="form-floatinging py-2 col-12">
                    <label asp-for="InformacionSocioeconomica" class="mb-2"></label>
                    <input asp-for="InformacionSocioeconomica" class="form-control border-0 shadow mb-3" />
                    <span asp-validation-for="InformacionSocioeconomica" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-info form-control">Editar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Estudiante" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
